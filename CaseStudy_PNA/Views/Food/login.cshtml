@model CaseStudy_PNA.Models.TBLUser

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>login</title>

    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
</head>
<body>
    <div class="border border-sucess">
        @using (Html.BeginForm("login", "Food", FormMethod.Post))
        {
            <center>
                <div class="m-5">
                    <h1 class="h2 text-success text-decoration-underline">Login Here</h1>
                    <table>
                        <tr>
                            <td>
                                @Html.Label("Enter User ID")
                            </td>
                            <td>
                                @Html.TextBoxFor(a => a.UserId)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label>Enter Password</label>
                            </td>
                            <td>
                                @Html.TextBoxFor(a => a.Password)
                            </td>
                        </tr>
                        <tr class="">
                            <td colspan="2">
                                <input type="submit" class="p-1 m-2 w-75 bg-success text-light" />
                            </td>
                        </tr>
                        <tr class="">
                            <td colspan="2">
                                @Html.ActionLink("Don't Have Account? Register Here!", "registerUser", "Food")
                            </td>
                        </tr>
                    </table>
                </div>
            </center>
        }
    </div>
</body>
</html>
