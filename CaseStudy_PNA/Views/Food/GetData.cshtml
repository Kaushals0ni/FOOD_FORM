@model List<CaseStudy_PNA.Models.TBLFood>

@{
    ViewBag.Title = "GetData";
    Layout = "~/Views/Shared/Header.cshtml";
}

<h2 class="text-decoration-underline">Display Data</h2>

<table class="table table-striped">
    <tr>
        <th>Dish Name</th>
        <th>Cuisine</th>
        <th>Price</th>
        <th>Discount</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @foreach(var e in Model)
    {
        <tr>
            <td>@e.DishName</td>
            <td>@e.Cuisine</td>
            <td>@e.Price</td>
            <td>@e.Discount</td>
            <td><a href="/Food/updateData/@e.Id_PK" class="btn btn-primary w-50">Update</a></td>
            <td><a href="/Food/deleteData/@e.Id_PK" class="btn btn-danger w-50">Delete</a></td>
        </tr>
    }
</table>
